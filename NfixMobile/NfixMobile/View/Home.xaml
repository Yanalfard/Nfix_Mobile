                                <Button
                                Clicked="Button_Clicked" Text="خرید" HorizontalOptions="Center" VerticalOptions="EndAndExpand"
                                    Style="{StaticResource Btn-Primary}"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>